<resources>

    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="actionModeBackground">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/fade</item>
        <item name="android:windowExitTransition">@transition/fade</item>
        <item name="selection_indicator_color">@color/blue</item>
        <item name="selection_indicator_color_invalid">@color/orange</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowEnterTransition">@transition/fade</item>
        <item name="android:windowExitTransition">@transition/slide</item>
    </style>

    <style name="AppTheme.Search">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowEnterTransition">@transition/fade</item>
        <item name="android:windowExitTransition">@transition/slide</item>
    </style>

</resources>
